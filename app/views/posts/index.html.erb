<div class="row">
  <div class="col-xs-8">
    <h1>Link Share</h1>
  </div>
  <div class="col-xs-4">
    <%= link_to '', new_post_path, class: 'btn btn-primary glyphicon glyphicon-plus pull-right' %>
  </div>
</div>

<% @posts.each do |post| %>
<div class="well">
  <h2><%= link_to post.title, post.link %></h2>
  <strong>By <%= post.user.name %></strong><br>
  <td><%= button_to '+1', upvote_post_path(post), method: :post %></td>
  <td><%= pluralize(post.votes.count, "vote") %></td>
  <p><%= link_to 'Comments', post_comments_path(post) %></p>
</div>
<% end %>